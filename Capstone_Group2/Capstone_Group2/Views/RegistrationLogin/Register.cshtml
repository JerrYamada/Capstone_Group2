@model User;

@{
    ViewData["Title"] = "Register";
}

<div class="text-center" style="height: 50px">
    <h1>Create an Account</h1>
</div>

<div class="text-center mb-3">
    <p>Already have an Account? <a href="@Url.Action("Login", "RegistrationLogin")" class="btn btn-link">Login</a></p>
</div>

<form asp-action="Register" method="post">
    <div class="row mb-2">
        <label asp-for="FullName" class="col-form-label col-md-2"></label>
        <div class="col-md-4">
            <input asp-for="FullName" class="form-control" />
        </div>
        <div class="col">
            <span asp-validation-for="FullName" class="text-danger"></span>
        </div>
    </div>

    <div class="row mb-2">
        <label asp-for="Email" class="col-form-label col-md-2"></label>
        <div class="col-md-4">
            <input asp-for="Email" class="form-control" />
        </div>
        <div class="col">
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
    </div>

    <div class="row mb-2">
        <label asp-for="Password" class="col-form-label col-md-2"></label>
        <div class="col-md-4">
            <input asp-for="Password" class="form-control" />
        </div>
        <div class="col">
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
    </div>

    <div class="row mb-2">
        <label asp-for="ConfirmPassword" class="col-form-label col-md-2"></label>
        <div class="col-md-4">
            <input asp-for="ConfirmPassword" class="form-control" />
        </div>
        <div class="col">
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>
    </div>

    <div class="row">
        <div class="offset-md-2 col">
            <button type="submit" class="btn btn-primary">Register</button>
        </div>
    </div>
</form>

